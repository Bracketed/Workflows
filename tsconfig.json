{
	"extends": ["@bracketed/typescript-config/tsup-strict"],
	"compilerOptions": {
		"incremental": false,
		"module": "esnext",
		"moduleResolution": "Node",
		"target": "ESNext",
		"resolveJsonModule": true,
		"jsx": "react",
		"jsxFactory": "React.createElement",
		"jsxFragmentFactory": "React.Fragment",
		"sourceMap": false,
		"declarationMap": false,
		"declaration": false,
		"rootDir": "./src",
		"outDir": "./dist",
		"paths": {
			"@/*": ["./src/*"]
		}
	},
	"include": ["src"],
	"exclude": ["dist", "node_modules", "generate-types.ts", "tsup.config.ts"]
}
